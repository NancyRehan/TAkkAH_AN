<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"

        app:srcCompat="@drawable/green" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="29dp"

        android:layout_marginTop="10dp"
        android:text="SIGN up"
        android:textColor="@color/black"


        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_ful_name"
        android:layout_width="330dp"

        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/shapedit"

        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="domyasol@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ful"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="302dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Full Name"

        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_ema"
        android:layout_width="330dp"

        android:layout_height="50dp"
        android:layout_marginStart="35dp"

        android:layout_marginTop="392dp"
        android:background="@drawable/shapedit"

        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="domyasol@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_em"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="377dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Email Address"

        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_passw"
        android:layout_width="330dp"

        android:layout_height="50dp"
        android:layout_marginStart="35dp"

        android:layout_marginTop="462dp"
        android:background="@drawable/shapedit"

        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="*********"
        android:inputType="numberPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_passw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="452dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Password"

        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_co_passw"
        android:layout_width="330dp"

        android:layout_height="50dp"
        android:layout_marginStart="35dp"

        android:layout_marginTop="530dp"
        android:background="@drawable/shapedit"

        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="+972 592454545"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_con_pas"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="520dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="mobile Number"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/bt_sibtn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_con_pas"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/shap"
        android:paddingTop="1dp"
        android:text="SIGn up"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white" />





</RelativeLayout>