<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onbording1"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:src="@drawable/onboarding1"
            android:keepScreenOn="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onboarding1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:fontFamily="@font/dosis"
            android:gravity="center"
            android:keepScreenOn="true"
            android:lineHeight="16dp"
            android:text="Welcome To Takkah "
            android:textColor="@color/green"
            android:textSize="37sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/onBoardingDetails"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="560dp"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="The most and reliable and fast delivery service!"
            android:textColor="@color/gray"
            android:textSize="22sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/dosis"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/skipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="740dp"
            android:layout_gravity="left"
            android:keepScreenOn="true"
            android:text="Skip"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dosis"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="740dp"
            android:layout_gravity="end"
            android:keepScreenOn="true"
            android:text="Next"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dosis"
            android:textStyle="normal" />

    </FrameLayout>

</RelativeLayout>